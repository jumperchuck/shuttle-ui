{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2018",
    "module": "esnext",
    "jsx": "react",
    "lib": ["esnext"],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "paths": {
      "@shuttle-ui/components": ["./packages/components/src"],
      "@shuttle-ui/system": ["./packages/system/src"],
      "@shuttle-ui/theme": ["./packages/theme/src"],
      "@shuttle-ui/utils": ["./packages/utils/src"]
    }
  },
  "exclude": ["node_modules", "**/dist", "**/node_modules"]
}
